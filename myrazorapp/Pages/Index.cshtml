@page
@model myrazorapp.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form method="POST">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in IndexModel.Customers){
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@customer.Id">Edit</a>
                        <button type="submit" 
                            asp-page-handler="delete" 
                            asp-route-id="@customer.Id">Delete</button>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-page="./Create">Create</a>
</form>
